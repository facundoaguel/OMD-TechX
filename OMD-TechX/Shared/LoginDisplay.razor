<AuthorizeView>
    <Authorized>
        <a class="btn" style="background-color: #28567A; color: lightgrey; margin-right:10px" href="Identity/Account/Manage">Hola, @context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="btn" style="background-color: #28567A; color: lightgrey">Cerrar sesión</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a class="btn" style="background-color: #28567A; color: lightgrey" href="Identity/Account/Login">Iniciar sesión</a>
    </NotAuthorized>
</AuthorizeView>
