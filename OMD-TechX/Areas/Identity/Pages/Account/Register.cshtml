@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<div class="row">
    <div class="col-md-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Registrar la cuenta de un nuevo cliente.</h2>
            <hr />
            
                <div class="form-floating mb-3">
                <input asp-for="Input.Nombre" pattern="[A-Za-z]+" class="form-control" aria-required="true" placeholder="Nombre" />
                    <label asp-for="Input.Nombre">Nombre</label>
                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                <input asp-for="Input.Apellido" class="form-control" aria-required="true" placeholder="Nombre" />
                    <label asp-for="Input.Apellido">Apellido</label>
                    <span asp-validation-for="Input.Apellido" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.DNI" type="number" class="form-control" autocomplete="new-password" aria-required="true" placeholder="44239102" />
                    <label asp-for="Input.DNI">DNI</label>
                    <span asp-validation-for="Input.DNI" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Telefono" type="number" class="form-control" aria-required="true" placeholder="221 304850" />
                    <label asp-for="Input.Telefono">Telefono</label>
                    <span asp-validation-for="Input.Telefono" class="text-danger"></span>
                </div>
                <button id="registerSubmit" style="background-color: #28567A" type="submit" class="w-100 btn btn-lg btn-primary">Registrar cliente</button>
        </form>
    </div>
    <div class="col-md-6" style="vertical-align:center; margin-top: 50px; margin-left: 50px">
        <section>
            <img src="/imagenes/Logo1-removebg-preview.png" />
        </section>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
